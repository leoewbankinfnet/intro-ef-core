@model IEnumerable<Domain.Aluno>

@{
    ViewData["Title"] = "Index";
}

@section Scripts {
    <script>
        
        $(document).ready(function () {

            var ids = [];

            $("input[type='hidden']").each(function (i, e) {
                ids.push($(e).val());
            })

            $("#lnkNavAlunos").click(function () {
                location.href = "/Aluno/Index?ids=" + ids.join(",");
            });
        });
    </script>

}

<h1>Alunos</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a href="#" id="lnkNavAlunos" >VER LISTAGEM DE ALUNOS COMPLETOS</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <input type="hidden" value="@item.Id.ToString()" />
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
